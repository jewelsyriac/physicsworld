<div class="container" style="position:fixed; width: max-content;">
    <div class="row justify-content-center mt-5">
      <div class="col-md-11">
        <div class="card">
          <div class="card-body"style="background-color: rgb(199, 230, 240);box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);">
           <% if(!currentUser) {%>
            <div><h3 class="card-title text-center">Login</h3>
            <form method="POST" action="/login">
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="username" class="form-control" id="usernmae" name="username" placeholder="Enter your username" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Login</button>
              </div>
            </form>
            
            <p class="text-center mt-3">Don't have an account? <a href="/register">Sign Up</a></p></div>
            <%} else {%>
              <div><h3 class="card-title text-center">User details</h3>
                
                  <div class="mb-3">
                    <h5>Username : <%=currentUser.username%></h5>
                  </div>
                  <div class="mb-3">
                    <h5>Email : <%=currentUser.email%></h5>
                  </div>
                  
                
                <p class="text-center mt-3"><button class="btn btn-success"><a href="/logout" >Logout</a></button></p></div>
              <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>